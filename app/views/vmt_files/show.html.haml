-# in app/views/movies/show.html.haml

%h2 Details about #{@vmt_file.filename}

%ul#details
  %li
    Oem:
    = @vmt_file.oem
  %li
    Last Updated On:
    = @vmt_file.last_updated.strftime("%B %d, %Y")

%h3 Description:

%p#description= @vmt_file.description

= link_to 'Edit', edit_vmt_file_path(@vmt_file)
= button_to 'Delete', vmt_file_path(@vmt_file), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to vmt file list', vmt_files_path
